{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "baseUrl": ".",
      "downlevelIteration": true,
      "paths": {
        "*": [
            "node_modules/*",
            "types/*"
        ]
    }
    },
    "include": [
      "build/*.ts",
      "src/**/*.ts",
      "spec/**/*.ts",
      "dashboard/**/*.ts",
      "dashboard/**/*.tsx",
    ]
  }
